<div class="page-header">
  <h3>Coaching #<%= @coaching.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Improvement plan</dt>
      <dd>
        <% if @coaching.improvement_plan.present? %>
          <a href="/improvement_plans/<%= @coaching.improvement_plan_id %>">
            <%= @coaching.improvement_plan.title %>
          </a>
        <% end %>
      </dd>

      <dt>Coach</dt>
      <dd>
        <% if @coaching.coach.present? %>
          <a href="/users/<%= @coaching.coach_id %>">
            <%= @coaching.coach.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/coachings" class="btn btn-primary">
        Back
      </a>
      <a href="/coachings/<%= @coaching.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_coaching/<%= @coaching.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
