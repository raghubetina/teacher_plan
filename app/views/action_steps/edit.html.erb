<!-- Validation failure messages -->
<% if @action_step.errors.any? %>
  <% @action_step.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Action Step #<%= @action_step.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_action_step/<%= @action_step.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @action_step.description %></textarea>
      </div>

      <!-- Label and input for target_date -->
      <div class="form-group">
        <label for="target_date" class="control-label">
          Target date
        </label>

        <input type="text" id="target_date" name="target_date" placeholder="Target date" class="form-control" value="<%= @action_step.target_date %>">
      </div>

      <!-- Label and input for resources_needed -->
      <div class="form-group">
        <label for="resources_needed" class="control-label">
          Resources needed
        </label>

        <textarea id="resources_needed" name="resources_needed" placeholder="Resources needed" class="form-control" rows="3"><%= @action_step.resources_needed %></textarea>
      </div>

      <!-- Label and input for implementation_specifics -->
      <div class="form-group">
        <label for="implementation_specifics" class="control-label">
          Implementation specifics
        </label>

        <textarea id="implementation_specifics" name="implementation_specifics" placeholder="Implementation specifics" class="form-control" rows="3"><%= @action_step.implementation_specifics %></textarea>
      </div>

      <!-- Label and input for measures_of_success -->
      <div class="form-group">
        <label for="measures_of_success" class="control-label">
          Measures of success
        </label>

        <textarea id="measures_of_success" name="measures_of_success" placeholder="Measures of success" class="form-control" rows="3"><%= @action_step.measures_of_success %></textarea>
      </div>

      <!-- Label and input for goal_id -->
      <div class="form-group">
        <label for="goal_id" class="control-label">
          Goal
        </label>

        <input type="text" id="goal_id" name="goal_id" placeholder="Goal" class="form-control" value="<%= @action_step.goal_id %>">
      </div>

      <!-- Label and input for lead_person -->
      <div class="form-group">
        <label for="lead_person" class="control-label">
          Lead person
        </label>

        <input type="text" id="lead_person" name="lead_person" placeholder="Lead person" class="form-control" value="<%= @action_step.lead_person %>">
      </div>

      <button class="btn btn-warning">
        Update Action Step
      </button>
      or
      <a href="/action_steps/<%= @action_step.id %>">Cancel</a>
    </form>
  </div>
</div>
